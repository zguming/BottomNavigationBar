<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/bg_click"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_ticket_type_list"
        android:layout_width="fill_parent"
        android:layout_height="55.0dip"
        android:background="@color/bg_blue"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:gravity="center_horizontal"
            android:paddingBottom="@dimen/space_8">
            <TextView
                android:id="@+id/tv_combo_ticket"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:drawableBottom="@mipmap/line_quick_login_white"
                android:gravity="center"
                android:text="旅游套票"
                android:textColor="@color/white"
                android:textSize="@dimen/font_16" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:gravity="center_horizontal"
            android:paddingBottom="@dimen/space_8">
            <TextView
                android:id="@+id/tv_red_packet"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:drawableBottom="@mipmap/line_quick_login_blue"
                android:gravity="center"
                android:text="优惠红包"
                android:textColor="@color/gray_login_text"
                android:textSize="@dimen/font_16" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_query_state_list"
        android:layout_width="fill_parent"
        android:layout_height="48.0dip"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_btn_use"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="可使用"
            android:textColor="@color/ticket_page_txt_color_blue"
            android:textSize="@dimen/font_14" />

        <TextView
            android:id="@+id/tv_btn_used"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="已用完"
            android:textColor="@color/combo_ticket_txt_color_aph_40"
            android:textSize="@dimen/font_14" />

        <TextView
            android:id="@+id/tv_btn_disabled"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="已失效"
            android:textColor="@color/combo_ticket_txt_color_aph_40"
            android:textSize="@dimen/font_14" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/myinfo_bg">








    </RelativeLayout>

</LinearLayout>